<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="10dp"
>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity = "center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorBackground"
        >

            <RelativeLayout
                    android:id="@+id/layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
            >

                <View
                        android:id="@+id/level_bar"
                        android:layout_width="3dp"
                        android:layout_height="27dp"
                        android:background="@color/GreyPrimary"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/sim_level_1"

                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/card_category"
                          android:text=" News"
                          android:textAlignment="center"
                          android:textSize="19dp"
                          android:layout_toRightOf="@+id/level_bar"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="10dp"
                />


                <ImageView
                        android:id="@+id/card_overflow"
                        android:src="@drawable/ic_overflow_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="?selectableItemBackgroundBorderless"

                />


            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/news_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_category"
                    android:orientation="vertical"
            >

                <include
                        android:id="@+id/item1"
                        layout="@layout/rcmd_news_simple_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                />
                <include
                        android:id="@+id/item2"
                        layout="@layout/rcmd_news_simple_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                />
                <include
                        android:id="@+id/item3"
                        layout="@layout/rcmd_news_simple_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                />
                <include
                        android:id="@+id/item4"
                        layout="@layout/rcmd_news_simple_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                />
                <include
                        android:id="@+id/item5"
                        layout="@layout/rcmd_news_simple_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                />

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
