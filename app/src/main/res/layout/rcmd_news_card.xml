<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"

>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity = "center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >

            <RelativeLayout
                    android:id="@+id/layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:layout_marginBottom="5dp"
            >

                <View
                        android:id="@+id/level_bar"
                        android:layout_width="3dp"
                        android:layout_height="27dp"
                        android:background="@color/GreyPrimary"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/sim_level_1"

                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/card_category"
                          android:text=" News"
                          android:textAlignment="center"
                          android:textSize="19dp"
                          android:layout_toRightOf="@+id/level_bar"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="10dp"
                />


                <ImageView
                        android:id="@+id/card_overflow"
                        android:src="@drawable/ic_overflow_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="?selectableItemBackgroundBorderless"

                />



            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_category"
                    android:background="@color/white"
            >

                <TextView
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/news_img"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"

                />

                <ImageView
                        android:id="@+id/news_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        tools:src="@drawable/insight"

                />


            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_sub_content"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_below="@+id/layout_content"
                    android:background="@color/white"
            >

                <ImageView
                        android:id="@+id/source_img"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        tools:src="@drawable/busan"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"

                />

                <TextView
                        android:id="@+id/card_source"
                        tools:text="source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                />

                <TextView
                        android:id="@+id/card_date"
                        tools:text="2019년4월18일"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                />


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
